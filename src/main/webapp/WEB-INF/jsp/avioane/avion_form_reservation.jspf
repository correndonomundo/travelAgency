            <form:hidden path="username" value="${pageContext.request.userPrincipal.name}" />
    <div class="form-group mb-2 mx-sm-3">
        <form:input path="nrLocuri" type="text" placeholder="Get number of places..."/>
    </div>
    <form:button type="submit" class="btn btn-primary mb-2">AddAvion</form:button>
</form:form>